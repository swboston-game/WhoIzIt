<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - WhoIzIt?</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@Url.Content("~/content/whoizit.css")" rel="stylesheet" type="text/css" />
        <script src="@Microsoft.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")" type="text/javascript"></script>
        <meta name="viewport" content="width=device-width" />
        @RenderSection("head", required: false)
    </head>
    <body>
        <div id="fb-root">
          <!-- you must include this div for the JS SDK to load properly -->
        </div>
        <header>
            <div class="content-wrapper">
                <div>Like Us</div>
                <div class="box">
                    <div class="float-left">
                        <nav>
                            <ul class="menu">
                                <li>@Html.ActionLink("Account", "Index", "Account")</li>
                                <li>@Html.ActionLink("Help", "Index", "Help")</li>
                                <li><a href="#_self">Mute</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="float-right">
                        <img src="@Url.Content("~/Images/logo.jpg")" alt="whoizit?" id="logo" />
                        <a href="#_self" class="rounded-link">Store</a>
                    </div>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - WhoIzI?</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                        <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </footer>

        @RenderSection("startupScript", false)
    </body>
</html>
